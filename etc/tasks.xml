<?xml version="1.0" encoding="ISO-8859-1"?>
<tasks name="default">
	<!-- Purge/Notify Inactive Users -->
	<task id="inactivity" enabled="false">
		<class>org.deltava.tasks.InactivityUpdateTask</class>
		<time>
			<min>0</min>
			<hour>1</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Purge old Flight Assignments -->
	<task id="assignpurge" enabled="false">
		<class>org.deltava.tasks.AssignmentPurgeTask</class>
		<time>
			<min>0</min>
			<hour>12</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Update HTTP server statistics -->
	<task id="httpstats" enabled="false">
		<class>org.deltava.tasks.HTTPLogStatisticsTask</class>
		<time>
			<min>30</min>
			<hour>1</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Purge Command statistics -->
	<task id="cmdlogpurge" enabled="true">
		<class>org.deltava.tasks.CommandLogPurgeTask</class>
		<time>
			<min>0</min>
			<hour>6</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Purge old Draft Flight Reports -->
	<task id="draftpurge" enabled="false">
		<class>org.deltava.tasks.DraftPIREPPurgeTask</class>
		<time>
			<min>0</min>
			<hour>6</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Innovata Schedule download -->
	<task id="innovatadl" enabled="true">
		<class>org.deltava.tasks.ScheduleImportTask</class>
		<time>
			<min>0</min>
			<hour>9</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Transfer Request purge -->
	<task id="txpurge" enabled="false">
		<class>org.deltava.tasks.TransferPurgeTask</class>
		<time>
			<min>0</min>
			<hour>11</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>
	
	<!-- SevInfo track update -->
	<task id="otrack" enabled="false">
		<class>org.deltava.tasks.OnlineTrackTask</class>
		<time>
			<min>*/3</min>
			<hour>*</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>	
	</task>

     <!-- Write position archive to file system -->
    <task id="fsposarchive" enabled="false">
       <class>org.deltava.tasks.PositionArchiveTask</class>
       <time>
           <min>50</min>
           <hour>1,4,7,10,13,16,19,22</hour>
           <mday>*</mday>
           <month>*</month>
           <wday>*</wday>
       </time>
    </task>

	<!-- Facebook credential validation -->
	<task id="fbvalidate" enabled="false">
		<class>org.deltava.tasks.FacebookValidationTask</class>
		<time>
			<min>0</min>
			<hour>8</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Job Posting close -->
	<task id="jobclose" enabled="false">
		<class>org.deltava.tasks.JobCloseTask</class>
		<time>
			<min>0</min>
			<hour>4</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Pilot Promotion Forum post -->
	<task id="forumrecog" enabled="false">
		<class>org.deltava.tasks.PromotionListTask</class>
		<time>
			<min>55</min>
			<hour>3</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- External Chart loader -->
	<task id="extchartload" enabled="false">
		<class>org.deltava.tasks.ExternalChartLoadTask</class>
		<time>
			<min>30</min>
			<hour>10</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

	<!-- Flight Report Queue Warning -->
	<task id="pirepqueuewarn" enabled="false">
		<class>org.deltava.tasks.PIREPQueueWarningTask</class>
		<time>
			<min>0</min>
			<hour>1,11,20</hour>
			<mday>*</mday>
			<month>*</month>
			<wday>*</wday>
		</time>
	</task>

    <task id="coursepurge" enabled="false">
       <class>org.deltava.tasks.CoursePurgeTask</class>
        <time>
            <min>30</min>
            <hour>11</hour>
            <mday>*</mday>
            <month>*</month>
            <wday>*</wday>
        </time> 
    </task>
</tasks>
